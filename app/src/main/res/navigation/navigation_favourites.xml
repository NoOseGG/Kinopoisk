<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_favourites"
    app:startDestination="@id/favouritesFragment">

    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.example.kinopoisk.screen.FavouritesFragment"
        android:label="@string/favourites_film"
        tools:layout="@layout/fragment_favourites">
        <action
            android:id="@+id/action_favouritesFragment_to_filmDetailsFragment2"
            app:destination="@id/filmDetailsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/filmDetailsFragment2"
        android:name="com.example.kinopoisk.screen.FilmDetailsFragment"
        android:label="FilmDetailsFragment" >
        <argument
            android:name="filmId"
            app:argType="integer" />
        <argument
            android:name="filmName"
            app:argType="string" />
    </fragment>
</navigation>